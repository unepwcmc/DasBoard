<section class="objective" id="<%= objective.id %>">
  <%= editable_tag(objective, 'name', :h3)%>

  <div class="metric">
    <% if objective.metric_id.present? %>
      <canvas id="metric-<%= objective.metric_id %>" width="800" height="400">
      </canvas>
    <% else %>
      No metric selected
      <%= render partial: 'objectives/select_metric', locals: {
        objective: objective,
        metrics: @metrics
      } %>
    <% end %>
  </div>
</section>
